<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="kz.fireman.andreygolubkow.fireman.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="627dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/startStreaming"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:layout_weight="0.00"
                        android:elevation="0dp"
                        android:text="Трансляция"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.28"
                        android:text="Адрес:"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fireAddress"
                        android:layout_width="303dp"
                        android:layout_height="wrap_content"
                        android:lines="4"
                        android:maxLines="4"
                        android:text="-"
                        android:textSize="18sp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Время заявки:"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/startFireTime"
                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:text="00-00"
                        android:textSize="18sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.21"
                        android:text="Описание:"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fireDesription"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:lines="4"
                        android:maxLines="4"
                        android:text="------"
                        android:textSize="14sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="История:"
                        android:textSize="18sp" />

                    <ListView
                        android:id="@+id/logList"
                        android:layout_width="336dp"
                        android:layout_height="158dp" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/showAttachments"
                        android:layout_width="wrap_content"
                        android:layout_height="77dp"
                        android:layout_weight="0.01"
                        android:onClick="imagesButtonClick"
                        android:text="Вложения"
                        android:textSize="18sp"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Статус:"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/isConnectedTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.16"
                                    android:text="Подключено"
                                    android:textAlignment="textEnd"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <Switch
                                    android:id="@+id/showHydarants"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:text="Пожарные гидранты"
                                    android:textSize="18sp" />

                                <Switch
                                    android:id="@+id/locateSwitch"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:text="Следить за машиной"
                                    android:textSize="18sp" />

                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <org.osmdroid.views.MapView
                                android:id="@+id/mapView"
                                android:layout_width="wrap_content"
                                android:layout_height="312dp" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/goNavigator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="77dp"
                                    android:layout_weight="1"
                                    android:elevation="0dp"
                                    android:onClick="goNavigatorFromMap"
                                    android:text="В навигатор"
                                    android:textSize="18sp" />

                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </LinearLayout>

</LinearLayout>
